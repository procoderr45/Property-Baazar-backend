{
    "compilerOptions": {
        // File Layout
        "rootDir": "./src",
        "outDir": "./dist",

        "module": "nodenext",
        "target": "esnext",
        "types": [],

        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,

        "strict": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
